!!! html
%html
  %head
    %title Blerg
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default
      .container-fluid
        .collapse.navbar-collapse
          = link_to 'Blerg', root_path, class: 'navbar-brand'
          %ul.nav.navbar-nav
            - if user_signed_in?
              %li= link_to 'New Post', new_post_path
              %li= link_to 'My Posts', posts_path
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li= link_to 'Log Out', destroy_user_session_path, method: :delete
            - else
              %li= link_to 'Sign Up', new_user_registration_path
              %li= link_to 'Log In', new_user_session_path

    - if notice
      %p.alert.alert-success= notice
    - if alert
      %p.alert.alert-warning= alert

    .container
      = yield
